{
  "name": "@hammerframework/hammer-api",
  "version": "0.0.1-alpha.11",
  "main": "dist/main.js",
  "files": [
    "dist",
    "graphql"
  ],
  "types": "./dist/main.d.ts",
  "license": "MIT",
  "dependencies": {
    "@hammerframework/hammer-core": "^0.0.1-alpha.11",
    "apollo-server-lambda": "2.9.7",
    "core-js": "3.3.3",
    "nexus": "v0.12.0-beta.14"
  },
  "devDependencies": {
    "@zerollup/ts-transform-paths": "^1.7.3",
    "graphql": "^14.5.6",
    "ttypescript": "^1.5.7"
  },
  "eslintConfig": {
    "extends": "@hammerframework/eslint-config-hammer/typescript"
  },
  "scripts": {
    "build": "yarn clean && yarn build:js && yarn build:types && mv dist/graphql graphql",
    "build:js": "babel src/ --out-dir dist/ --extensions \".ts\" --source-maps inline",
    "build:types": "ttsc --declaration --emitDeclarationOnly",
    "build:watch": "nodemon --ignore dist --exec 'yarn build'",
    "prepublish": "yarn build",
    "clean": "rm -rf dist && rm -rf graphql"
  }
}
