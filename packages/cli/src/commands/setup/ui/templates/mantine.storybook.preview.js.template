import * as React from 'react'

import { MantineProvider, extendTheme } from '@mantine/core'
import * as theme from 'src/config/mantine.config'

const extendedTheme = extendedTheme(theme)

const withMantine = (StoryFn) => {
  return (
    <MantineProvider theme={extendedTheme}>
      <StoryFn />
    </MantineProvider>
  )
}

export const decorators = [withMantine]
