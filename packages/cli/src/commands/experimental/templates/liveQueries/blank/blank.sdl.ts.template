// api/src/graphql/auctions.sdl.ts

export const schema = gql`
  type Query {
    ${queryName}(id: ID!): ${typeName} @skipAuth
  }

  type ${typeName} {
    id: ID!
    title: String!
    highestBid: Bid
    bids: [Bid!]!
  }

  type Bid {
    amount: Int!
  }

  type Mutation {
    bid(input: BidInput!): Bid @skipAuth
  }

  input BidInput {
    ${name}Id: ID!
    amount: Int!
  }
`
