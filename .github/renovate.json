{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:base"
  ],

  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],

  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },

    {
      "matchPackageNames": [
        "boxen",
        "chalk",
        "camelcase",
        "configstore",
        "decamelize",
        "execa",
        "humanize-string",
        "latest-version",
        "pascalcase",
        "pretty-bytes",
        "pretty-ms",
        "tempy",
        "terminal-link"
      ],
      "matchPackagePatterns": [
        "^@redwoodjs/"
      ],
      "enabled": false
    }
  ]
}
